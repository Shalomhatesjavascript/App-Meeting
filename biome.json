{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "root": true,

  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.turbo",
      "!**/.cache",
      "!**/coverage",
      "!**/*.min.*",
      "!**/.next",
      "!**/.svelte-kit",
      "!**/*.tsbuildinfo"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },

  "assist": { "actions": { "source": { "organizeImports": "on" } } },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },

  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
