{
  "name": "shalom-social-media",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "lint:biome": "biome lint .",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "check:staged": "biome check --write --staged",
    "hooks:setup": "git config core.hooksPath .githooks",
    "ci:check": "biome check .",
    "ci:typecheck": "turbo run typecheck",
    "ci:build": "turbo run build",
    "ci": "bun run ci:check && bun run ci:typecheck && bun run ci:build"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^2.0.0",
    "turbo": "^2.7.3",
    "typescript": "^5"
  }
}
